<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Map takes most of the screen -->
    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/controlPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Navigation info overlay at top of map -->
    <LinearLayout
        android:id="@+id/infoOverlay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="#CC000000"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap 'Set Origin' to begin"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Speed: --"
                android:textColor="@android:color/holo_green_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDistance"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Remaining: --"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvConfidence"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Confidence: --"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Control panel at bottom -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@color/design_default_color_surface"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Origin and Destination info -->
        <TextView
            android:id="@+id/tvOrigin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Origin: Not set"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/tvDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Destination: Not set"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1" />

        <!-- Button row 1: Set points -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetOrigin"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Set Origin"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSetDestination"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Set Destination"
                android:enabled="false"
                style="@style/Widget.Material3.Button.OutlinedButton" />
        </LinearLayout>

        <!-- Button row 2: Route and Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalculateRoute"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:text="Calculate Route"
                android:enabled="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartNavigation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="Start Navigation"
                android:enabled="false"
                app:backgroundTint="@android:color/holo_green_dark" />
        </LinearLayout>

        <!-- Reset button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnReset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Reset"
            style="@style/Widget.Material3.Button.TextButton" />

        <!-- Sensor info (collapsible/debug) -->
        <TextView
            android:id="@+id/tvSensorInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sensor info..."
            android:textSize="10sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
